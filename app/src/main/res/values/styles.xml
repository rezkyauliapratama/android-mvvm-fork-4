<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:buttonStyle">@style/GlobalButtonStyle</item>
    </style>

    <style name="GlobalButtonStyle" parent="AppTheme">
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="NameTextView" parent="AppTheme">W
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="StatusTextView" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CounterTextView" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="CounterTitleTextView" parent="CounterTextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AccentButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/accent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FAB" parent="AppTheme">
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:clickable">true</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
    </style>

</resources>
